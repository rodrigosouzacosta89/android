<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sistema_de_vendas"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#9300EE"
                android:text="Categoria"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:text="Fabricante"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />


            <Button
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#2007FF"
                android:text="Produtos"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />
        </LinearLayout>



        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#9300EE"
                android:text="Visualizar Categoria"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:text="Visualizar Fabricante"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />


            <Button
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#2007FF"
                android:text="Visualizar Produto"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#9300EE"
                android:text="Venda"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:text="Visualizar Venda"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />


            <Button
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#2007FF"
                android:text="Usuarios"
                android:layout_toRightOf="@id/btn1"
                android:layout_margin="10dp"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="120dp">


            <Button
                android:id="@+id/btn10"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#03A9F4"
                android:text="Sair"
                android:layout_margin="10dp"
                android:textColor="#FFF" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>


